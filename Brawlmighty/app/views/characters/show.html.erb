<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <style>
    body {
      background-image: url('http://backissuebasement.co.uk/wp-content/uploads/2016/09/Justice-League-Avengers-DC-Comics-Marvel-Portada-960x623.jpg');
      background-color: black;
      background-position: center;
      background-size: cover;
    }
    .blender {
      background-blend-mode: luminosity;
    }

    .box {
      box-sizing: border-box;
      /* width: 50%; */
      background: black;
      border: 5px solid black;
      float: center;
      text-align: center;
      opacity: 0.75;
    }
  </style>

  <body class="blender">
  <div class="box">
<h1>Character Name: <%= link_to @character.name, characters_path %></h1>
<h2>Alignment: <%= link_to @character.alignment.name, alignments_path %></h2>
<h2>Power: <%= link_to @character.power.name, @character.power %></h2>
<h2>Weapon: <%= link_to @character.weapon.name, @character.weapon %></h2>
<h2>Terrain: <%= link_to @character.terrain.name, @character.terrain %></h2>
<h2>Master: <%= link_to @character.user.username, @character.user %></h2>
</div>
</body>
