<style>
  body {
    background-image: url('http://backissuebasement.co.uk/wp-content/uploads/2016/09/Justice-League-Avengers-DC-Comics-Marvel-Portada-960x623.jpg');
    background-color: black;
    background-position: center;
    background-size: cover;
  }
  .blender {
    background-blend-mode: luminosity;
  }

  .box {
    box-sizing: border-box;
    /* width: 50%; */
    background: black;
    border: 5px solid black;
    float: center;
    text-align: center;
    opacity: 0.75;
  }
</style>

<body class="blender">
<div class="box"><div id="header_title"> <h1>Weapons</h1> </div></div>
<div id="grid">
  <% @weapons.each do |weapon| %>
  <div>
    <%= link_to weapon.name, weapon %>
  </div>
  <% end %>
</div>
</body>
